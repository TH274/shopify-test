<style>
  .faq-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
  }
  .faq-item {
    border-top: 1px solid #e5e5e5;
    margin-bottom: 0;
  }
  .faq-question {
    position: relative;
    font-size: 16px;
    font-weight: normal;
    margin: 0;
    padding: 20px 40px 20px 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .faq-question::after {
    content: '';
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
  }
  .faq-question.active::after {
    transform: translateY(-50%) rotate(180deg);
  }
  .faq-answer {
    font-size: 14px;
    color: #555;
    padding: 0 0 20px;
    display: none;
    line-height: 1.5;
  }
  .faq-answer.show {
    display: block;
  }
  .contact-button {
    display: inline-block;
    padding: 12px 25px;
    font-size: 14px;
    background-color: #333;
    color: white;
    text-decoration: none;
    text-transform: uppercase;
    margin-top: 20px;
    border: none;
    cursor: pointer;
  }
</style>

<div class="faq-container">
  {% for block in section.blocks %}
    {% if block.type == 'faq-item' %}
      <div class="faq-item">
        <div class="faq-question" onclick="this.classList.toggle('active'); this.nextElementSibling.classList.toggle('show')">
          {{ block.settings.faq_title }}
        </div>
        <div class="faq-answer">
          {{ block.settings.faq_description }}
        </div>
      </div>
    {% endif %}
  {% endfor %}

  {% if section.settings.show_button %}
    <a href="{{ section.settings.button_link }}" class="contact-button">{{ section.settings.button_text }}</a>
  {% endif %}
</div>

{% schema %}
  {
    "name": "FAQ",
    "settings": [ 
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "CONTACT"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "checkbox",
        "id": "show_button",
        "label": "Show button",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "faq-item",
        "name": "FAQ Item",
        "settings": [
          {
            "type": "text",
            "id": "faq_title",
            "label": "Question Title",
            "default": "Can I combine multiple orders to save on shipping costs?"
          }, {
            "type": "textarea",
            "id": "faq_description",
            "label": "Answer Description",
            "default": "Unfortunately, we are unable to combine multiple orders once theyâ€™ve been placed. Each order is processed individually to ensure fast and accurate shipping. To save on shipping costs, we recommend placing all desired items in a single order at checkout."
          }
        ]
      }
    ],
    "max_blocks": 20,
    "presets": [
      {
        "name": "FAQ Section",
        "category": "Content"
      }
    ]
  }
{% endschema %}