{% schema %}
{
  "name": "Custom Hero Banner",
  "tag": "section",
  "class": "custom-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Enjoy This Winter Trend"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover now latest collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop now"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Banner"
    }
  ]
}
{% endschema %}

<div class="custom-hero-container">
  <div class="custom-hero-inner">
    {% if section.settings.image %}
      <div class="custom-hero-image">
        <img src="{{ section.settings.image | image_url: width: 700 }}" alt="Hero Image" loading="lazy" />
      </div>
    {% endif %}
    <div class="custom-hero-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
      {% if section.settings.button_link %}
        <div class="button-container">
          <a href="{{ section.settings.button_link }}" class="custom-hero-button">
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.custom-hero-container {
  padding: 0;
  background-color: #f6f6f6;
  width: 100%;
}

.custom-hero-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: auto;
  flex-wrap: wrap;
}

.custom-hero-image {
  flex: 1 1 50%;
  text-align: left;
}

.custom-hero-image img {
  max-width: 100%;
  height: auto;
  display: block;
}

.custom-hero-content {
  flex: 1 1 40%;
  padding: 20px 40px;
  text-align: center;
}

.custom-hero-content h2 {
  font-size: 42px;
  margin-bottom: 15px;
  font-weight: 500;
  line-height: 1.2;
  color: #333;
}

.custom-hero-content p {
  font-size: 16px;
  margin-bottom: 30px;
  color: #777;
}

.button-container {
  margin-top: 25px;
}

.custom-hero-button {
  background-color: transparent;
  padding: 10px 25px;
  border: 1px solid #333;
  text-decoration: none;
  color: #333;
  font-weight: normal;
  font-size: 14px;
  text-transform: capitalize;
  display: inline-block;
  transition: all 0.3s ease;
}

.custom-hero-button:hover {
  background-color: #333;
  color: #fff;
}

@media (max-width: 768px) {
  .custom-hero-inner {
    flex-direction: column;
  }
  
  .custom-hero-image, 
  .custom-hero-content {
    flex: 1 1 100%;
  }
}
</style>
